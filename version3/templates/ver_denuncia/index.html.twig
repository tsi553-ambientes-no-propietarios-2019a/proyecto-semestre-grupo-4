{% extends 'base.html.twig' %}

{% block title %}Hello VerDenunciaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<br>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      
      
      <th scope="col">titulo</th>
      <th scope="col">descripcion</th>
      <th scope="col">direccion</th>
      <th scope="col">imagen</th>
      <th scope="col">fecha</th>
    </tr>
  </thead>
  <tbody>
    {% for denuncia in denuncias %}
    <tr>
      <th scope="row">1</th>
        
      <td>{{denuncia.titulo}}</td>
      <td>{{denuncia.descripcion}}</td>
      <td>{{denuncia.direccion}}</td>
      <td><img src="{{ vich_uploader_asset(denuncia, 'imageFile') }}" alt="{{ denuncia.imageName }}" height="50"/></td>
      <td>{{denuncia.fecha ? denuncia.fecha|date('Y-m-d') : '' }}</td>
      
    </tr>
    {% endfor %}
    
  </tbody>
</table>
{% endblock %}

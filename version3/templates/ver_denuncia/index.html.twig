{% extends 'base.html.twig' %}

{% block title %}Hello VerDenunciaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<br>

<div class="card mb-3" style="max-width: 1200px;">
  <div class="row no-gutters">
  
  {% for denuncia in denuncias %}
    
    <div class="col-md-4">
      <img src="{{ vich_uploader_asset(denuncia, 'imageFile') }}" alt="{{ denuncia.imageName }}" height="200px" width="50px" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2 class="card-title">{{denuncia.titulo}}</h2>
        <p>fecha: {{denuncia.fecha ? denuncia.fecha|date('Y-m-d') : '' }}</p>
        <h5>realizado por: {{denuncia.user.username}}</h5>
        <h4>Descripcion</h4>
        <p class="card-text">{{denuncia.descripcion}}</p>
      </div>
    </div>
  <br>
  {% endfor %}
  </div>
</div>

   



{% endblock %}
